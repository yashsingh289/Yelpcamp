<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
            <h1>Add New Comment to <%= campground.name %></h1>
            <div style="width: 30%;margin:35px auto;">
                    <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control"  placeholder="name" name="comment[text]">
                        </div>
                        
                        
                        <div class="form-group">
                            <button class="btn btn-lg btn-warning btn-block ">Submit</button>
                        </div>
                                                
                    </form>
            </div>
            
            <a href="/campgrounds">Back</a>
    </div>
        
        
</div>

<% include ../partials/footer %>