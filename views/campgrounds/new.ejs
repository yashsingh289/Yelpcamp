<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
            <h1>Create a new Campground</h1>
            <div style="width: 30%;margin:35px auto;">
                    <form action="/campgrounds" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control"  placeholder="name" name="name">
                        </div>
                        <div class="form-group">
                            <input type="text" name="image" class="form-control" placeholder="image url">
                        </div>
                        <div class="form-group">
                            <input type="text" name="description" class="form-control" placeholder="About">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-warning btn-block ">Submit</button>
                        </div>
                                                
                    </form>
            </div>
            
            <a href="/campgrounds">Back</a>
    </div>
        
        
</div>

<% include ../partials/footer %>