<% include ../partials/header %>
<div class="container">
    <div class="row text-center">
            <h1>Edit <%= campground.name %></h1>
            <div style="width: 30%;margin:35px auto;">
                    <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input type="text" class="form-control"  value="<%= campground.name %>" name="campground[name]">
                        </div>
                        <div class="form-group">
                            <input type="text" name="campground[image]" class="form-control" value="<%= campground.image %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="campground[description]" class="form-control" value="<%= campground.description %>">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-warning btn-block ">Submit</button>
                        </div>
                                                
                    </form>
            </div>
            
            <a href="/campgrounds">Back</a>
    </div>
        
        
</div>

<% include ../partials/footer %>
    